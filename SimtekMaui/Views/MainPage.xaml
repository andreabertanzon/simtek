<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimtekMaui.MainPage"
             xmlns:viewmodel="clr-namespace:SimtekMaui.ViewModels"
             xmlns:model="clr-namespace:SimtekMaui.Data.Models.Intervention;assembly=SimtekMaui.Data"
             x:DataType="viewmodel:MainViewModel">

    <CollectionView
        ItemsSource="{Binding Interventions}"
        SelectionMode="None"
        Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:InterventionDto">
                <Frame CornerRadius="10" 
                       BorderColor="DarkGray" 
                       HasShadow="True">
                    <StackLayout>
                        <Label Text="{Binding Title}" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               Margin="10,10,10,0"/>
                        <Label Text="{Binding Description}" 
                               FontSize="18" 
                               Margin="10,0,10,10"/>
                        <Label Text="{Binding InterventionDate}"
                               Margin="10,0,10,10"/>
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>