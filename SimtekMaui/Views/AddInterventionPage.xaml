<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimtekMaui.Views.AddInterventionPage"
             xmlns:viewmodel="clr-namespace:SimtekMaui.ViewModels"
             x:DataType="viewmodel:AddInterventionViewModel"
             Background="#1C1B1F"
             Title="Nuovo Intervento">
    <Grid ColumnDefinitions="*" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto" RowSpacing="10" Margin="10">
        <Label
            Text="Welcome to .NET MAUI!"
            TextColor="White"/>
        <!--<Label 
            Grid.Row="2"
            Text="Pippo"
            TextColor="White"/>-->

        <Entry Grid.Row="2" 
               Placeholder="Titolo" 
               Background="Black" 
               TextColor="White"/>
        <Entry 
               Grid.Row="3" 
               Placeholder="Descrizione" 
               Background="Black" 
               TextColor="White"/>
        
        <DatePicker Grid.Row="4"
                    Background="Black"
                    TextColor="White"
                    MinimumDate="01/01/2022"
                    MaximumDate="12/31/2022"
                    Date="06/21/2022" />
    </Grid>
</ContentPage>